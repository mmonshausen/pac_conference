<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>README*</include>
				<include>*.pdf</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../conference-backend/</directory>
			<outputDirectory>/sql</outputDirectory>
			<includes>
				<include>*.sql</include>
			</includes>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.prodyna.pac.mmonshausen.conference:conference-ear:ear</include>
			</includes>
			<binaries>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- Collect sources -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<excludes>
				<exclude>com.prodyna.pac.mmonshausen.conference:conference-ear</exclude>
			</excludes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<attachmentClassifier>sources</attachmentClassifier>
				<outputDirectory>/sources</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- Collect test sources -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.prodyna.pac.mmonshausen.conference:conference-backend</include>
			</includes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<attachmentClassifier>test-sources</attachmentClassifier>
				<outputDirectory>/sources</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- Collect test sources -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.prodyna.pac.mmonshausen.conference:conference-client-jsf</include>
			</includes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<attachmentClassifier>test-sources</attachmentClassifier>
				<outputDirectory>/sources</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- Collect test sources -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.prodyna.pac.mmonshausen.conference:conference-client-rest</include>
			</includes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<attachmentClassifier>test-sources</attachmentClassifier>
				<outputDirectory>/sources</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- Collect javadoc -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<excludes>
				<exclude>com.prodyna.pac.mmonshausen.conference:conference-ear</exclude>
			</excludes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<attachmentClassifier>javadoc</attachmentClassifier>
				<outputDirectory>/doc</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<excludes>
				<exclude>com.prodyna.pac.mmonshausen.conference:conference-dist</exclude>
			</excludes>
			<includes>
				<include>com.prodyna.pac.mmonshausen.conference:*</include>
			</includes>

			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>surefire-reports/${module.artifactId}</outputDirectory>
						<directory>target/surefire-reports</directory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
</assembly>